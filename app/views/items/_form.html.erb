<%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

  <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<section class="fdb-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-8 col-xl-6">
        <div class="row align-items-center">
          <div class="col mt-4">
            <label>Dress name</label>
            <%= form.text_field :name, id: :item_name, :class => "form-control", :placeholder => "Dress Name" %>
          </div>
        </div>

        <div class="row align-items-center">
          <div class="col mt-4">
            <label>Rental price</label>
            <%= form.text_field :price, id: :item_name, :class => "form-control", :placeholder => "Price" %>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col mt-4">
            <label>Description</label>
            <%= form.text_field :description, id: :item_description, :class => "form-control", :placeholder => "Description" %>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col mt-4">
            <label>Category</label>
            <%#= form.text_field :category, id: :item_category, :class => "form-control", :placeholder => "Category" %>
            <%= form.select :category, StaticData::Constants::DRESS_CATEGORIES, :class => "form-control", :placeholder => "Description" %>
          </div>
        </div>


          <div class="row align-items-center mt-4">
            <div class="col">
              <label>Upload Image</label>
              <%= form.file_field :image, id: :item_image%>
            </div>
          </div>


                    <div class="field">
                      <%= form.hidden_field :user_id, id: :item_user_id %>
                    </div>

          <div class="row mt-4">
            <div class="col">
              <button class="btn">Submit</button>
            </div>
          </div>


          <% end %>
        </div>
      </div>
    </div>
  </section>
