            <%#= f.select :category, StaticData::Constants::DRESS_CATEGORIES, {prompt: 'Select Category'}, { value: '', class: 'form-control', onchange: 'this.form.submit();' } %>
          <!-- </div> -->
        <%# end %>

      <% end %>
    </form>
    <% end %>

  </div>
</div>




<div class="container mt-5">


      <% content_for :search do %>
      <div class="container sort form-style mt-1">
      <h6 style="display: inline"><p style="display: inline">Sort by:</p></h6><%= sort_link @search, :price, "Price" %>
      <%= sort_link @search, :created_at, "Posted on" %>
      <%= sort_link @search, :title, "Likes" %>
      </div>
      <% end %>

    <div class="row">

      <% @items.each do |item| %>
      <div class="col-lg 3 col-md-3 col-sm-12 col-xs-12">
        <div class="card mb-5">
          <%= link_to item_path(item) do %>
          <%= image_tag item.image_url , class: "card-img-top img-fluid"%>
          <% end %>
          <div class="card-block">
            <p class="card-text mt-1 ml-1"><%= item.name %></p>
            <p id="grey-out" class="text-h4 ml-1 mt-0"> $ <%= item.price %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>


  </div>
