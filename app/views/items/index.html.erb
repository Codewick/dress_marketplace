
<div class="container">
  <div class="">
    <% content_for :search do %>
    <form class="form-inline mt-5 ml-5">
      <%= search_form_for @search do |f| %>

        <div class="col-1.5 ml-5 form-style">
          <%#= f.select :price_gteq, [0,10,20,30,40,50,100], {prompt: 'Select Min Price'}, {class: "custom-select form-control col-3 mx-auto", id: "inlineFormCustomSelect" %>
          <%= f.select :price_gt, [0,10,20,30,40,50,100], {prompt: 'Select Min Price'}, { value: '', class: 'form-control ml-5', placeholder: "Minimum  Price" } %>

        </div>
        <%#= f.text_field :price_lteq, class: "form-control col-3 mr-3", placeholder: "Maximum Price" %>
        <div class="col-1.5 ml-2 form-style">
          <%#= f.select :price_gteq, [0,10,20,30,40,50,100], {prompt: 'Select Min Price'}, {class: "custom-select form-control col-3 mx-auto", id: "inlineFormCustomSelect" %>
          <%= f.select :price_lteq, [0,10,20,30,40,50,100], {prompt: 'Select Max Price'}, { value: '', class: 'form-control', placeholder: "Maximum Price" } %>

        </div>
        <div class="col-1.5 ml-2 form-style">
        <%= f.select :category_cont, StaticData::Constants::DRESS_CATEGORIES, {prompt: 'Select Category'}, { value: '', class: 'form-control', placeholder: "Category" } %>
        </div>
        <%= f.text_field :name_cont, class: "form-control col-2  ml-2", placeholder: "Dress"  %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
        </div>



        <%#= form_with url: items_path, method: :get, local: true do |f| %>
